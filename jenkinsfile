pipeline {
    agent any
    stages {
        stage("git") {
            steps {
                echo "Git: https://github.com/ErikJ-hub/test.git"
                git 'https://github.com/ErikJ-hub/test.git'
            }
        }
        
        stage("build") {
            steps {
                echo "build"
                echo " - 1: bat 'python test1.py'"
                bat 'python test1.py'
                echo " - 2: bat 'C:/Users/erik/AppData/Local/Programs/Python/Python37/python.exe ./test1.py'"
                bat 'C:/Users/erik/AppData/Local/Programs/Python/Python37/python.exe ./test1.py'
                echo " - 3: Final"
            }
        }
    }
    
    post { 
        always { 
            echo 'always: I will always say Hello again!'
        }
        
        changed {
            echo 'Changed'
        }

        failure {
            echo 'Failure'
        }

        success {
            echo 'Success'
        }

        unstable {
            echo 'unstable'
        }

        unsuccessful {
            echo 'unsuccessful'
        }

        cleanup {
            echo 'cleanup'
        }
    }
}
